{% extends 'base.html.twig' %}

{% block title %}register.html.twig{% endblock %}

{% block body %}
    <div class="flex justify-center items-center h-screen bg-custom-black text-white">
        <div class="w-full max-w-xs">
            <a href="{{ path('app_home') }}" class="btn btn-primary">home</a>
            
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'class': 'bg-custom-black p-6 rounded-lg shadow-lg'}) }}
                <div class="mb-4">
                    {{ form_row(registrationForm.prenom, {'attr': {'class': 'bg-gray-200 border border-gray-200 rounded p-3 w-full focus:outline-none focus:border-custom-blue text-custom-blue'}}) }}
                </div>
                <div class="mb-4">
                    {{ form_row(registrationForm.nom, {'attr': {'class': 'bg-gray-200 border border-gray-200 rounded p-3 w-full focus:outline-none focus:border-custom-blue text-custom-blue'}}) }}
                </div>
                <div class="mb-4">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'bg-gray-200 border border-gray-200 rounded p-3 w-full focus:outline-none focus:border-custom-blue text-custom-blue'}}) }}
                </div>
                <div class="mb-4">
                    {{ form_row(registrationForm.password, {
                        'label': 'Password',
                        'attr': {'class': 'bg-gray-200 border border-gray-200 rounded p-3 w-full focus:outline-none focus:border-custom-blue text-custom-blue'}
                    }) }}
                </div>
                <div class="mb-4">
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'mb-2'}}) }}
                </div>
                <button type="submit" class="bg-custom-green hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full text-custom-blue">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
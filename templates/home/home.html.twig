{% extends 'base.html.twig' %}
{% block title %}
    home.html.twig
{% endblock %}
{% block body %}
    <div {{ react_component('Sidebar') }}></div>
    *
                    
    <body class="bg-gray-100">
        <header class="text-center p-6 bg-white shadow">
            <div class="inline-flex items-center">
                <img src="path_to_logo.png" alt="Logo" class="h-12">
                    <span class="text-xl font-bold ml-2">
                        Nom du Site
                    </span>
                </div>
            </header>
            <div class="container mx-auto p-6">
                <div class="text-center mb-6">
                    <a href="/creer-article" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
                        Créer votre article classique
                    </a>
                    <a href="/creer-article-visuel" class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 ml-4">
                        Créer article avec visualisation
                    </a>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    {% for article in articles %}
                        <div class="max-w-sm rounded overflow-hidden shadow-lg bg-white p-4">
                            <img class="w-full" src="{{ article.image }}" alt="Image de l'article">
                                <div class="px-6 py-4">
                                    <div class="font-bold text-xl mb-2">
                                        {{ article.titre }}
                                    </div>
                                    <p class="text-gray-700 text-base">
                                        {{ article.contenu | slice(0, 100) }}
                                        ...
                                                                
                                    </p>
                                </div>
                                <div class="px-6 pt-4 pb-2">
                                    <a href="/article/{{ article.id }}" class="text-indigo-500 hover:text-indigo-800">
                                        Lire plus
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                
                <div {{ react_component('Footer') }}></div>
            {% endblock %}
            
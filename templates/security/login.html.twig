{# templates/security/login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
 <div class="flex justify-center items-center h-screen flex-col">
        <h1 class="text-custom-green text-9xl font-bold mb-6">Bienvenue sur stare-it</h1>
       <div class="flex justify-center items-center h-screen">
        <div class="w-full max-w-xs">
            <form class="bg-custom-black shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <div class="mb-4">
                    <label class="block text-custom-green text-sm font-bold mb-2" for="email">
                        Email
                    </label>
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="email"
                        type="email"
                        placeholder="Email"
                        value="{{ email ?? '' }}"
                        oninput="email = this.value"
                    />
                </div>
                <div class="mb-6">
                    <label class="block text-custom-green text-sm font-bold mb-2" for="password">
                        Password
                    </label>
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="password"
                        type="password"
                        placeholder="Password"
                        value="{{ password ?? '' }}"
                        oninput="password = this.value"
                    />
                </div>
                <div class="flex items-center justify-between">
                    <button
                        class="bg-custom-green hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="submit"
                    >
                        se connecter
                    </button>
                    <button
                        class="bg-custom-purple hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="button"
                            >
                        s'inscrire
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

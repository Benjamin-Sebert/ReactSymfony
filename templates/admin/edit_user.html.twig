{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur {{ user.prenom }}{% endblock %}

{% block body %}
    <div class="dark:bg-gray-900 justify-center h-screen px-4" style="padding-top: 10px;">
        <h1 class="text-2xl font-bold text-white">Modifier l'utilisateur {{ user.prenom }}</h1>

        <div class="mt-8">
            {{ form_start(form, {'attr': {'class': 'w-full max-w-md mx-auto'}}) }}
            
            <div class="mb-4">
                {{ form_label(form.prenom, 'Pr√©nom', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.roles, 'Roles', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.roles, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Enregistrer
                </button>
                <a href="{{ path('admin') }}" class="text-gray-500 hover:text-gray-700">Retour</a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{# templates/theme/list_themes.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <title>Personnalisation du Thème</title>
    <style>
        /* Styles pour les options de personnalisation */
        .customization-option {
            display: block;
            margin-bottom: 10px;
        }

        /* Ajoutez des styles supplémentaires au besoin */
    </style>
</head>
<body>
    <h1>Personnalisation du Thème</h1>

    <form id="themeCustomizationForm">
        <!-- Options pour le thème -->
        <div class="customization-option">
            <label for="themeSelect">Sélectionnez le Thème:</label>
            <select id="themeSelect" name="theme">
                <option value="light">Thème Clair</option>
                <option value="dark">Thème Sombre</option>
                <option value="custom1">Thème Personnalisé 1</option>
                <option value="custom2">Thème Personnalisé 2</option>
                <!-- Ajoutez d'autres options de thème au besoin -->
            </select>
        </div>

        <!-- Options de couleur de fond -->
        <div class="customization-option">
            <label for="backgroundColor">Couleur de Fond:</label>
            <input type="color" id="backgroundColor" name="backgroundColor" />
        </div>

        <!-- Options de police -->
        <div class="customization-option">
            <label for="fontFamily">Police:</label>
            <select id="fontFamily" name="fontFamily">
                <option value="Arial">Arial</option>
                <option value="Times New Roman">Times New Roman</option>
                <!-- Ajoutez d'autres options de police au besoin -->
            </select>
        </div>

        <!-- Options de taille de police -->
        <div class="customization-option">
            <label for="fontSize">Taille de Police:</label>
            <input type="number" id="fontSize" name="fontSize" />
        </div>

        <!-- Options de couleur du texte -->
        <div class="customization-option">
            <label for="textColor">Couleur du Texte:</label>
            <input type="color" id="textColor" name="textColor" />
        </div>

        <button type="button" onclick="saveTheme()">Enregistrer</button>
    </form>

    <script src="{{ asset('js/theme.js') }}"></script>
</body>
</html>
